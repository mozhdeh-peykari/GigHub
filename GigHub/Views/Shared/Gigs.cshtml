@model GigHub.ViewModels.GigViewModel
@{
    ViewBag.Title = "Home Page";
}
<h2>
    @Model.Heading
</h2>
@using (Html.BeginForm("Search", "Gigs"))
{
    <div class="form-group">
        <div id="SearchGigs" class="input-group">
            @Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control", placeholder="Search by artist, genre or venue" })
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-search"></i>
            </span>
        </div>
    </div>
}
<ul class="gigs voffset5">
    @foreach (var g in Model.Gigs)
    {
        <li>
            <div class="date">
                <div class="month">
                    @g.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @g.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @g.Artist.Name

                    @if (g.IsCanceled)
                    {
                        <span class="label label-warning">Canceled</span>
                    }

                    @if (Model.ShowAction)
                    {
                        <button data-artist-id="@g.ArtistId" class="btn btn-link js-toggle-follow">Follow</button>
                    }
                </span>

                <span class="genre">
                    @g.Genre.Name
                </span>
                @if (Model.ShowAction && !g.IsCanceled)
                {
                    <button data-gig-id="@g.Id" class="btn btn-default btn-sm pull-right js-toggle-attendance">Going?</button>
                }
            </div>
        </li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-toggle-attendance").click(function (e) {
                debugger;
                var button = $(e.target);
                $.post("/api/attendances", { gigId: button.attr("data-gig-id") })
                    .done(function () {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");
                    })
                    .fail(function () {
                        alert("Something failed!");
                    });
            });

            $(".js-toggle-follow").click(function (e) {
                var button = $(e.target);
                $.post("/api/followings", { followeeId: button.attr("data-artist-id") })
                    .done(function () {
                        button.text("Following");
                    })
                    .fail(function () {
                        alert("Something failed in following!");
                    });
            });
        });
    </script>
}
