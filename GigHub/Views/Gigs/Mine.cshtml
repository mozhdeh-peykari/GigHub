@model IEnumerable<GigHub.Core.Models.Gig>
@{
    ViewBag.Title = "Mine";
}

<h2>My Upcoming Gigs</h2>

<ul class="gigs voffset5">
    @foreach (var g in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @g.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @g.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @g.Venue
                </span>

                <span class="genre">
                    @g.Genre.Name
                </span>
                <div class="actions">
                    <a href="@Url.Action("Edit","Gigs", new { id = g.Id})">Edit</a>
                    |
                    <a href="#" data-gig-id="@g.Id" class="js-cancel-gig">Cancel</a>
                </div>
            </div>
        </li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-cancel-gig").click(function (e) {

                bootbox.confirm({
                    message: "Are you sure you want to cancel this gig?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-danger'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-default'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            var item = $(e.target);
                            $.ajax({
                                url: "/api/gigs/" + item.attr("data-gig-id"),
                                method: "DELETE"
                            })
                                .done(function () {
                                    item.parents("li").fadeOut(function () {
                                        $(this).remove();
                                    })
                                })
                                .fail(function () {
                                    alert("Something failed!");
                                })
                        }
                    }
                });
            })
        });
    </script>
}